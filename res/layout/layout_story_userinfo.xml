        <!--android:layout_width="40dp"-->
        <!--android:layout_height="40dp"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_margin="12dp"-->
        <!--android:padding="5dp"-->
        <!--android:src="@drawable/ic_launcher" />-->

</RelativeLayout>